<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Layout principal donde controlo las vistas y todo eso -->
    <!-- Configuración básica del documento -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- Título del sitio -->
    <title>Control de Mantenimiento</title>

    <!-- Estilos externos -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


    <!-- Iconos de FontAwesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <!-- Barra superior de navegación donde se muestra el logo y el usuario -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color: #d7d8dc;">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <!-- Botón y logo juntos -->
            <div class="d-flex align-items-center">
                <!-- Botón para mostrar/ocultar -->
                <button class="btn btn-sm me-2" id="sidebarToggle" style="background-color: #d7d8dc; color: black;">
                    <i class="fas fa-bars"></i>
                </button>


                <!-- Logo de la aplicación -->
                <a class="navbar-brand ps-1" href="@Url.Action("Inicio", "Home")">
                    <img src="~/images/LCFE.png" style="height: 30px;">
                </a>
            </div>

            <!-- Menú de usuario al extremo derecho -->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user fa-fw"></i>
                        <span class="ms-2">Jose Manuel</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Perfil</a></li>
                        <li><a class="dropdown-item" href="#">Opciones</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#">Salir</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Contenedor principal que divide la barra lateral y el contenido -->
    <div id="layoutSidenav">
        <!-- Barra lateral -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion" style="background-color: #008e60;">
                <div class="sb-sidenav-menu">
                    <div class="nav">
 
                        <!-- Enlaces AJAX que cargan contenido dinámicamente sin recargar toda la página
                                así seran todos los botones
                         -->
                        <a href="/Home/Inicio" class="nav-link ajax-link" style="color: white;">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Inicio
                        </a>
                        
                        <a href="/Home/Monitoreo" class="nav-link ajax-link" style="color: white;">
                            <div class="sb-nav-link-icon"><i class="fas fa-eye"></i></div>
                            Monitoreo de CFEmáticos
                        </a>

                        <a class="nav-link collapsed text-white" href="#" data-bs-toggle="collapse" data-bs-target="#collapseMantenimientos" aria-expanded="false" aria-controls="collapseMantenimientos">
                            <div class="sb-nav-link-icon"><i class="fas fa-tools"></i></div>
                            Agendar
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <div class="collapse" id="collapseMantenimientos" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav flex-column">

                                <!-- Preventivo -->
                                <a class="nav-link text-white ajax-link" href="/Home/Agendar">
                                    <div class="sb-nav-link-icon"><i class="fas fa-tools me-2"></i></div>
                                    Mantenimiento Preventivo
                                </a>

                                <!-- Submenú Correctivo -->
                                <a class="nav-link collapsed text-white" href="#" data-bs-toggle="collapse" data-bs-target="#collapseCorrectivo" aria-expanded="false" aria-controls="collapseCorrectivo">
                                    <div class="sb-nav-link-icon"><i class="fas fa-tools me-2"></i></div>
                                    Mantenimiento Correctivo
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>

                                <div class="collapse" id="collapseCorrectivo" data-bs-parent="#collapseMantenimientos">
                                    <nav class="sb-sidenav-menu-nested nav flex-column ps-3">
                                        <a class="nav-link text-white ajax-link" href="/Home/MCCFEmatico">
                                            <i class="fas fa-cash-register me-2"></i> CFEmático
                                        </a>
                                        <a class="nav-link text-white ajax-link" href="/Home/MCCFEturno">
                                            <i class="fas fa-clock me-2"></i> CFEturno
                                        </a>
                                        <a class="nav-link text-white ajax-link" href="/Home/MCCFEcam">
                                            <i class="fas fa-video me-2"></i> CFEcam
                                        </a>
                                        <a class="nav-link text-white ajax-link" href="/Home/MCPC">
                                            <i class="fas fa-desktop me-2"></i> PC
                                        </a>
                                        <a class="nav-link text-white ajax-link" href="/Home/MCLaptop">
                                            <i class="fas fa-laptop me-2"></i> Laptop
                                        </a>
                                    </nav>
                                </div>


                                
                            </nav>
                        </div>
                        <!-- Terminar mantenimiento -->
                        <a href="/Home/TerminarMantenimiento" class="nav-link text-white ajax-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-upload"></i></div>
                            Terminar Mantenimiento
                        </a>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div id="contenido-principal">
                    @RenderBody() <!-- Aquí se carga el contenido de cada vista -->
                </div>
            </main>

            <!-- Pie de página -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Comision Federal de Electricidad</div>
                        <div>
                            <a href="#">Política de Privacidad</a>
                            &middot;
                            <a href="#">Términos &amp; Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts de Bootstrap y otros recursos -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)

    <!-- jQuery para AJAX -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Aquí es donde agregamos la variable
        var vistaActual = ""; // ← Paso 1: la declaras aquí

        $(document).ready(function () {
            $('.ajax-link').click(function (e) {
                e.preventDefault();
                var url = $(this).attr('href');

                if (url === vistaActual) return;

                $('#contenido-principal').load(url + ' #contenido-principal > *', function () {
                    vistaActual = url;

                    if (url.includes("Agendar")) {
                        $.getScript('/js/agendar.js');
                    }
                });
            });
        });
    </script>

</body>
</html>

