@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Bienvenido</h1>
    <p>Los mantenimientos programados son:</p>
    <p>Hoy es: @DateTime.Now.ToString("dd/MM/yyyy")</p>

    <!-- Contenedor de la tabla dentro de una tarjeta estilizada -->
    <div class="card mt-4 shadow-sm rounded">
        <div class="card-body">
            <!-- Tabla que será manejada por DataTables -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Mantenimientos Programados
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th style="width: 20%;">Fecha Programada</th>
                                <th style="width: 25%;">Centro</th>
                                <th style="width: 25%;">Tipo</th>
                                <th style="width: 15%;">Ver Equipo</th>
                                <th style="width: 15%;">Hoja de Servicio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>16/04/2025</td>
                                <td>San Felipe</td>
                                <td>CFEmatico</td>
                                <td class="text-center align-middle">
                                    <button class="btn btn-sm" style="background-color: #d7d8dc; color: black; border: 1px solid #b0b0b0;" data-bs-toggle="modal" data-bs-target="#modalInfo">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                                <td class="text-center align-middle">
                                    <button class="btn btn-sm" style="background-color: #d7d8dc; color: black; border: 1px solid #b0b0b0;" data-bs-toggle="modal" data-bs-target="#modalPdf">
                                        <i class="bi bi-file-earmark-pdf"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Modal Bootstrap para mostrar el PDF (por ahora estará vacío) -->
        <div class="modal fade" id="modalPdf" tabindex="-1" aria-labelledby="modalPdfLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <!-- modal-xl para hacerlo grande -->
                <div class="modal-content rounded">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalPdfLabel">Hoja de Servicio</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Aquí más adelante irá el PDF embebido -->
                        <p>Aquí se mostrará la Hoja de Servicio.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Bootstrap para mostrar la informacion del equipo -->
        <div class="modal fade" id="modalInfo" tabindex="-1" aria-labelledby="modalPdfLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <!-- modal-xl para hacerlo grande -->
                <div class="modal-content rounded">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalPdfLabel">Información del equipo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Aquí más adelante irá el PDF embebido -->
                        <p>Aquí se mostrará la información del equipo.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





